@using SquishIt.Framework
@{
    ViewBag.Title = "Import Css";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="test-container">
    <p class="blue-text">This text should be blue if imports were processed.</p>
</div>

@section Styles{
    @MvcHtmlString.Create(
        Bundle.Css()
            .Add("/assets/styles/processedimport_test1.css")
            .ProcessImports()
            .ForceRelease()
            .Render("/output/processed_importcss.css"))
}